{{#partial "content"}}
    <section>
        <div class="container">
            <div class="entry-list single">
                <article>
                    <h1>{{ post.title }}</h1>
                    <time datetime="{{ post.creationDate}}">{{ post.creationDate}}</time>
                    <div class="entry">
                        <p>{{ post.post }}</p>
                        <p class="edit-delete"><a class="link" href="/{{post.slug}}/edit">Edit Entry</a></p>
                        <p class="edit-delete"><a class="link" href="/{{post.slug}}/delete">Delete Entry</a></p>
                    </div>
                </article>
            </div>
        </div>
    </section>
    <section class="entry-comments">
        <div class="container">
            <h2>Comments</h2>
            {{#each post.blogComments}}
            <div class="comment">
                <strong>{{ this.author }}</strong>
                <time datetime="{{ this.creationDate }}">{{ this.creationDate }}</time>
                <p>{{ this.commentBody }}</p>
            </div>
            {{/each}}
            <div class="new-comment">
                <form action="/{{ post.slug }}/new-comment" method="post">
                    <label for="name"> Name</label>
                    <input type="text" name="name"><br>
                    <label for="comment">Comment</label>
                    <textarea rows="5" name="comment"></textarea>
                    <input type="submit" value="Post Comment" class="button">
                </form>
            </div>
        </div>
    </section>

{{/partial}}

{{>base.hbs}}